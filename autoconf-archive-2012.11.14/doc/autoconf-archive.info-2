       #include <sstream>
       #ifdef HAVE_NAMESPACES
       using namespace std;
       #endif
       #ifdef HAVE_SSTREAM
       stringstream message;
       #else
       strstream message;
       #endif
       message << "Hello";
       #ifdef HAVE_FREEZE_SSTREAM
       message.freeze(0);
       #endif

